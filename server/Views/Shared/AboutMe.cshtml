@model server.Models.Post
<div class="aboutme-wrapper grid-x small-12 medium-12 large-12">
    <div class="aboutme-image small-12 medium-4 large-4">
        <img src="@Model.IdUserNavigation.IdPictureNavigation.SourcePreview" alt="@Model.IdUserNavigation.IdPictureNavigation.AlternativeText">
    </div>
    <div class="aboutme-text small-12 medium-8 large-8">
        <h4 class="separator-left">@Model.IdUserNavigation.Name</h4>
        <p>@Html.Raw(Model.Body)</p>
    </div>
    <a class="align-self-bottom" href="#down"><i class="fas fa-arrow-down hide-for-small-only h2"></i></a>
</div>